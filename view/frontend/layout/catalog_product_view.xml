<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">s
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Widget\RecentlyViewed"
                   name="recently.viewed.product" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Previous</argument>
                    <argument name="uiComponent" xsi:type="string">widget_recently_viewed</argument>
                    <argument name="show_attributes" xsi:type="string">name,sku,price</argument>
                    <argument name="show_buttons" xsi:type="string">add_to_cart</argument>
                    <argument name="template" xsi:type="string">product/widget/viewed/list.phtml</argument>
                    <argument name="sort_order" xsi:type="string">40</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
